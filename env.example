# Database
MONGODB_URI=mongodb://localhost:27017/whisper-echo

# JWT
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Server
PORT=3000
NODE_ENV=development

# CORS (optional, comma-separated origins for production)
# Example: CORS_ORIGINS=https://your-frontend.com,https://admin.your-frontend.com
CORS_ORIGINS=

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# AI Services (Optional - for content moderation)
OPENAI_API_KEY=your-openai-key-here
PERSPECTIVE_API_KEY=your-perspective-api-key-here
